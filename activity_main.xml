<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/calculator" />

    <EditText
        android:id="@+id/edFirstValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="@string/enter_1st_value"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edSecondValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="@string/enter_2nd_value"
        android:inputType="number"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/result"
        android:textAlignment="center"
        android:textColorHint="#676865"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signPlus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/teal_200"
        android:text="@string/Plus"

        android:textSize="34sp"
        app:cornerRadius="15dp"
        app:iconSize="20dp"
        app:iconTint="#1E1E1E"
        app:rippleColor="#131313" />

    <Button
        android:id="@+id/signMinus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/teal_200"
        android:text="@string/Minus"
        android:textSize="34sp"
        app:cornerRadius="15dp"
        app:iconSize="20dp"
        app:iconTint="#1E1E1E"
        app:rippleColor="#131313" />

    <Button
        android:id="@+id/signMultiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/teal_200"
        android:text="@string/Multiply"
        android:textSize="34sp"
        app:cornerRadius="15dp"
        app:iconSize="20dp"
        app:iconTint="#1E1E1E"
        app:rippleColor="#131313" />

    <Button
        android:id="@+id/signDivide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/teal_200"
        android:text="@string/Divide"
        android:textSize="34sp"
        app:cornerRadius="15dp"
        app:iconSize="20dp"
        app:iconTint="#1E1E1E"
        app:rippleColor="#131313" />
</LinearLayout>
